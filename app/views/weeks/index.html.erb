<p id="notice"><%= notice %></p>

<h1>Weeks</h1>
<div style="max-width: 600px">
<div class="row">
  <div class="col-xs-3"><b>Name</b></div>
  <div class="col-xs-3"><b>Start Date</b></div>
  <div class="col-xs-3"><b>End Date</b></div>
  <div class="col-xs-3"><b>Options</b></div>
</div>

<% @weeks.each do |week| %>
  <div class="row" style="border-bottom: 1px dashed #000">
    <div class="col-xs-3"><%= week.name %></div>
    <div class="col-xs-3"><%= week.start_date.strftime("%A %b %d") %></div>
    <div class="col-xs-3"><%= week.end_date.strftime("%A %b %d") %></div>
    <div class="col-xs-3">
      |<%= link_to 'Edit', edit_week_path(week) %>|
      |<%= link_to 'Destroy', week, method: :delete, data: { confirm: 'Are you sure?' } %>|
    </div>
  </div>
<% end %>
</div>
<br>

